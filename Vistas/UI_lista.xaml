<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bitki.Vistas.UI_lista">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="10" BackgroundColor="DarkGray">
            <ListView x:Name="ListaPlantas" ItemSelected="OnSelection">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}" Detail="{Binding Ubicacion}"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Agregar" BackgroundColor="BlanchedAlmond" TextColor="Black" Clicked="btn_agregar"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>